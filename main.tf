terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.16"
    }
  }

  required_version = ">= 1.2.0"
}


provider "aws" {
  region  = "sa-east-1"
  access_key = TF_VAR_AWS_ACCESS_SECRET
  secret_key = TF_VAR_AWS_KEY_ID
}

resource "aws_instance" "app_server" {
  ami           = "ami-830c94e3"
  instance_type = "t2.micro"

  tags = {
    Name = "gerraform-study"
  }
}